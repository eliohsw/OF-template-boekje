\ExplSyntaxOn
\newcommand*\SetFontIfAvailable[2]{%
  \def\sf@found{0}%
  \def\sf@chosen{}%
  \@for\sf@name:=#2\do{%
    \edef\sf@trimmed{\tl_trim_spaces:n{\sf@name}}%
    \ifnum\sf@found=0\relax
      \IfFontExistsTF{\sf@trimmed}{%
        \def\sf@found{1}\edef\sf@chosen{\sf@trimmed}%
      }{}%
    \fi
  }%
  \ifnum\sf@found=1\relax
    #1{\sf@chosen}%
  \else
    \PackageWarning{set-fonts}{None of these fonts were found: #2. Using defaults.}%
  \fi
}
\ExplSyntaxOff
\makeatother


\makeatletter
\newcommand*\SetFontIfAvailableNamed[3]{%
  % #1: font selection command (e.g., \setmainfont),
  % #2: comma-separated list of candidates,
  % #3: human-readable label for logging (e.g., Main, Sans, Mono, CJK Main)
  \def\sf@found{0}%
  \def\sf@chosen{}%
  \@for\sf@name:=#2\do{%
    \ifnum\sf@found=0\relax
      \IfFontExistsTF{\sf@name}{%
        \def\sf@found{1}\edef\sf@chosen{\sf@name}%
      }{}%
    \fi
  }%
  \ifnum\sf@found=1\relax
    #1{\sf@chosen}%
    \PackageInfo{set-fonts}{#3 font: \sf@chosen}%
  \else
    \PackageWarning{set-fonts}{None of these fonts were found: #2. Using defaults.}%
  \fi
}
\makeatother

\makeatletter
\newcommand*\PickFirstFontIfAvailable[2]{%
  % #1: macro to receive chosen font name (expanded), #2: comma-separated list
  \def\sf@found{0}%
  \def\sf@chosen{}%
  \@for\sf@name:=#2\do{%
    \ifnum\sf@found=0\relax
      \IfFontExistsTF{\sf@name}{%
        \def\sf@found{1}\edef\sf@chosen{\sf@name}%
      }{}%
    \fi
  }%
  \ifnum\sf@found=1\relax
    \edef#1{\sf@chosen}%
  \else
    \edef#1{}%
  \fi
}
\makeatother


