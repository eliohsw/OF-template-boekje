{
    // Disable autobuild
    "latex-workshop.latex.autoBuild.run": "never",
    // Custom recipes and tools
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk (xelatex)",
            "tools": [
                "xelatexmk"
            ]
        },
        {
            "name": "latexmk (xelatex, minted)",
            "tools": [
                "makeminted"
            ]
        },
        {
            "name": "xelatex (boekje)",
            "tools": [
                "xelatex",
                "biber",
                "makeglossaries",
                "makeindex",
                "xelatex",
                "xelatex"
            ]
        },
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-shell-escape",
                "%DOC%"
            ]
        },
        {
            "name": "xelatexmk",
            "command": "latexmk",
            "args": [
                "-xelatex",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-shell-escape",
                "%DOC%"
            ]
        },
        {
            "name": "minted",
            "command": "python",
            "args": [
                "script/mint_injector.py",
                "--style",
                "style1",
                "--texfile",
                "%DOC%"
            ]
        },
        {
            "name": "makeminted",
            "command": "make",
            "args": [
                "minted"
            ]
        },
        {
            "name": "biber",
            "command": "biber",
            "args": [
                "%DOCFILE%"
            ]
        },
        {
            "name": "makeglossaries",
            "command": "makeglossaries",
            "args": [
                "%DOCFILE%"
            ]
        },
        {
            "name": "makeindex",
            "command": "makeindex",
            "args": [
                "%DOCFILE%"
            ]
        }
    ],
    "latex-workshop.latex.autoClean.run": "onFailed",
    "latex-workshop.latex.clean.command": "make",
    "latex-workshop.latex.clean.args": [ "clean" ],
}
